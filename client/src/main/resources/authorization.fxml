<AnchorPane prefHeight="386.0" prefWidth="499.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.AuthClientController">
    <children>
        <Label layoutX="92.0" layoutY="60.0" prefHeight="31.0" prefWidth="54.0" text="Login">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="90.0" layoutY="136.0" prefHeight="31.0" prefWidth="80.0" text="Password" >
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="loginField" layoutX="92.0" layoutY="91.0" prefHeight="39.0" prefWidth="316.0">
            <font>
                <Font size="18.0" />
            </font>
            <tooltip>
                <Tooltip text="Enter Login (example: user1)" />
            </tooltip>
        </TextField>
        <PasswordField fx:id="passField" layoutX="92.0" layoutY="165.0" onAction="#checkAuth" prefHeight="39.0" prefWidth="316.0">
            <font>
                <Font size="18.0" />
            </font>
            <tooltip>
                <Tooltip text="Enter password (example: pass1)" />
            </tooltip>
        </PasswordField>
        <Button layoutX="92.0" layoutY="225.0" mnemonicParsing="false" onAction="#checkAuth" prefHeight="40.0" prefWidth="316.0" text="Enter" >
